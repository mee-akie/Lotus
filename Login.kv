<LoginPage>:
    name: 'login'
    Screen:
        Image:
            source: "assets/lotus_logo.png"
            pos_hint: {"x": .34, "y": .44}
            size_hint: 0.3, 0.3

        Image:
            source: "assets/logo.png"
            pos_hint: {"x": .15, "y": .35}
            size_hint: 0.86, 0.86

        MDTextField:
            id: user
            hint_text: "Email"
            mode: "rectangle"
            pos_hint: {"x": .25, "y": .4}
            size_hint: 0.5, None

        MDTextField:
            id: senha
            hint_text: "Senha"
            mode: "rectangle"
            pos_hint: {"x": .25, "y": .3}
            size_hint: 0.5, None
            password: True

        MDRoundFlatButton:
            text: "Entrar"
            pos_hint: {"x": .25, "y": .2}
            size_hint: 0.5, None
            on_release: root.validaLogin()

        Label:
            pos_hint : {"center_x":.5,"center_y":.15}
            font_size: '12sp'
            color: get_color_from_hex("#B42529")
            text: '    Esqueceu a senha ou\nprecisa realizar um cadastro?'
            