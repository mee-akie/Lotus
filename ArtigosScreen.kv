<ArtigosPage>:
    name: 'artigos'
    BoxLayout:
        Image:
            source: "assets/comunidade_cab.png"
            pos_hint: {"center_x":.5,"center_y":1}
            size_hint: 0.2, 0.4

    MDIconButton:
        icon : "arrow-left"
        pos_hint : {"center_x":.12,"center_y":.95}
        icon_size: "128sp"
        on_press:
            root.manager.transition.direction = 'right'
            root.switchSaude()

    MDBottomNavigation:
        size_hint_y: .09
        panel_color: get_color_from_hex("#F6C7B7")
        text_color_active: get_color_from_hex("#B42529")
        
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'saúde'
            icon: 'calendar-month'
            on_enter:
                root.manager.transition.direction = 'left'
                root.switchSaude()

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'ajuda'
            icon: 'clipboard-outline'
            on_enter:
                root.manager.transition.direction = 'left'
                root.switchTelemedicina()

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Home'
            icon: 'home-circle'
            on_enter: root.switchHome()

        MDBottomNavigationItem:
            name: 'screen 4'
            text: 'informação'
            icon: 'book-open-page-variant'
            on_enter:
                root.manager.transition.direction = 'left'
                root.switchArtigos()
        
        MDBottomNavigationItem:
            name: 'screen 5'
            text: 'comunidade'
            icon: 'account-multiple'
            on_enter: root.switchComunidade()