<CalendarioPage>:
    name: 'calendario'
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        md_bg_color: toolbarColor

    MDIconButton:
        icon : "arrow-left"
        pos_hint : {"center_x":.12,"center_y":.95}
        icon_size: "128sp"
        on_press:
            root.manager.transition.direction = 'right'
            root.switchSaude()

    MDBottomNavigation:
        size_hint_y: .09
        panel_color: get_color_from_hex("#F6C7B7")
        text_color_active: get_color_from_hex("#B42529")
        
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'saúde'
            icon: 'calendar-month'
            on_enter:
                root.manager.transition.direction = 'left'
                root.switchSaude()

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'ajuda'
            icon: 'clipboard-outline'
            on_enter:
                root.manager.transition.direction = 'left'
                root.switchHome()

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Home'
            icon: 'home-circle'
            on_enter: root.switchHome()

        MDBottomNavigationItem:
            name: 'screen 4'
            text: 'informação'
            icon: 'book-open-page-variant'
            on_enter:
                root.manager.transition.direction = 'left'
                root.switchHome()
        
        MDBottomNavigationItem:
            name: 'screen 5'
            text: 'perfil'
            icon: 'account-multiple'
            on_enter: root.switchHome()

    BoxLayout:
        Image:
            source: "assets/calendario.png"
            pos_hint: {"center_x":.7,"center_y":.63}
            size_hint: 0.55, 0.6
    
                    
    MDFillRoundFlatIconButton:
        text : 'Gerar relatório'
        icon : "cloud-download"
        pos_hint : {"center_x":.75,"center_y":.2}
        md_bg_color : get_color_from_hex("#FA7F77")
        text_color : get_color_from_hex("#FFFFFF")
        font_size : 14
        user_font_size: "64sp" 